{
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-console": 0,
        "no-debugger": 1
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "globals": {
        "PIXI": true,
        "$": true,
        "Stats": true
    }
}